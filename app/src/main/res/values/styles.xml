<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--夜间主体-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color3A3A3A</item>
        <item name="colorPrimaryDark">@color/color3A3A3A</item>
        <item name="colorAccent">@color/color868686</item>
        <item name="themeBackground">@color/color3F3F3F</item>
        <item name="themeTextColor">@color/color8A9599</item>
        <item name="themeDivider">@android:color/background_light</item>
    </style>

    <!--白天主题-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/color868686</item>
        <item name="themeBackground">@android:color/white</item>
        <item name="themeTextColor">@android:color/black</item>
        <item name="themeDivider">@android:color/background_dark</item>
    </style>


    <!--海洋主题-->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="themeBackground">@android:color/holo_blue_bright</item>
        <item name="themeTextColor">@android:color/white</item>
        <item name="themeDivider">@android:color/white</item>
    </style>
</resources>
